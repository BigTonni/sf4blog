<!-- Blog Post -->
<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">
            {% filter upper %}
                {{- post.title -}}
            {% endfilter %}
        </h2>
        <p class="card-text">{{- post.description -}}</p>
        <a href="{{- path('post_show', {slug: post.slug}) -}}" class="btn btn-primary btn-sm active" role="button">Show</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{- path('post_edit', {slug: post.slug}) -}}" class="btn btn-secondary btn-sm" role="button">Edit</a>
            <a href="{{- path('post_delete', {slug: post.slug}) -}}" class="btn btn-secondary btn-sm" role="button">Delete</a>
        {% endif %}
    </div>
    <div class="card-footer text-muted">
        Posted on {{ post.createdAt|date('Y-m-d') }} by <a href="#">{{ post.author.username }}</a> <br>
        Category: {{ post.category.title }} <br>
        Tags:
          {% for tag in post.tags %}
              <a href="{{- path('tag_show', {slug: tag.slug}) -}}" class="btn btn-outline-primary btn-sm">{{ tag.title }}</a>
          {% endfor %}
    </div>
</div>
