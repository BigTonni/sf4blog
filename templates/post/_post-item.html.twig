<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">
            {% filter upper %}
                {{- post.title -}}
            {% endfilter %}
        </h2>
        <p class="card-text">{{- post.description -}}</p>
        <a href="{{- path('post_show', {slug: post.slug}) -}}" class="btn btn-primary btn-sm active" role="button">{{ 'Show'|trans }}</a>
    </div>
    <div class="card-footer text-muted">
        {% trans with {'%createdAt%': post.createdAt|date('Y-m-d'), '%username%': post.author.username} %}Posted on %createdAt% by %username%{% endtrans %} <br>
        {{ 'Category'|trans }}: {{ post.category.title }} <br>
        {{ 'Tags'|trans }}:
          {% for tag in post.tags %}
              <a href="{{- path('tag_show', {slug: tag.slug}) -}}" class="btn btn-outline-primary btn-sm">{{ tag.title }}</a>
          {% endfor %}
    </div>
</div>
