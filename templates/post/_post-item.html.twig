<div class="card mb-4">
    <div class="card-body">
        <h2 class="card-title">
            {% filter upper %}
                {{- post.title -}}
            {% endfilter %}
        </h2>
        <p class="card-text">{{- post.description -}}</p>
        <a href="{{- path('post_show', {slug: post.slug}) -}}" class="btn btn-primary btn-sm active" role="button">{{ 'Show'|trans }}</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{- path('post_edit', {slug: post.slug}) -}}" class="btn btn-secondary btn-sm" role="button">{{ 'Edit'|trans }}</a>
            <a href="{{- path('post_delete', {slug: post.slug}) -}}" class="btn btn-secondary btn-sm" role="button">{{ 'Delete'|trans }}</a>
        {% endif %}
    </div>
    <div class="card-footer text-muted">
        {{ 'Posted on'|trans }} {{ post.createdAt|date('Y-m-d') }} {{ 'by'|trans }} <a href="#">{{ post.author.username }}</a> <br>
        {{ 'Category'|trans }}: {{ post.category.title }} <br>
        {{ 'Tags'|trans }}:
          {% for tag in post.tags %}
              <a href="{{- path('tag_show', {slug: tag.slug}) -}}" class="btn btn-outline-primary btn-sm">{{ tag.title }}</a>
          {% endfor %}
    </div>
</div>
