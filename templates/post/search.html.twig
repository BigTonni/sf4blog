{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Posts'|trans }}
{% endblock %}
{% block content %}
    {% if posts|length > 0 %}
    <h1 class="text-center">{{ 'Search Results'|trans }} - <span class="post-count">{{ posts.getTotalItemCount }}</span>
    </h1>
    <div class="posts">
        <div class="row">
            {% include 'layouts/_catalog-grid.html.twig' with {'posts' : posts} only %}
        </div>
    </div>
    <div class="navigation pagination justify-content-center mb-4">
        {{ knp_pagination_render(posts) }}
    </div>
    <a href="{{ path('post_search', { 'count': 10, 'title': app.request.get('title') }) }}">10</a>
    <a href="{{ path('post_search', { 'count': 25, 'title': app.request.get('title') }) }}">25</a>
    <a href="{{ path('post_search', { 'count': 50, 'title': app.request.get('title') }) }}">50</a>
    {% else %}
        <p class="text-center">{{ 'Posts not found'|trans }}. {{ 'You can will create new post'|trans }}.</p>
    {% endif %}
{% endblock %}
