{% extends 'admin-index.html.twig' %}
{% block title %}
    Tags
{% endblock %}
{% block contentName %}
    Tags
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{- path('tag_new') -}}" class="btn btn-secondary btn-sm active" role="button">new</a>
    {% endif %}
{% endblock %}

{% block items %}
    {% if tags|length == 0 %}
        <p class="text-center">Tags not found. You can will create new tag.</p>
    {% else %}
    {% include 'layouts/_table.html.twig' with {'items' : tags, 'page' : 'tag_edit'} only %}
    {% endif %}
{% endblock %}

{% block pagination %}
    {{ knp_pagination_render(tags) }}
{% endblock %}
